---
import Laravel from "./icons/laravel.astro";
import Git from "./icons/git.astro";
import JavaScript from "./icons/javascript.astro";
import TypeScript from "./icons/typescript.astro";
import Php from "./icons/php.astro";
import Css from "./icons/css.astro";
import Tailwind from "./icons/tailwind.astro";
import MySql from "./icons/mysql.astro";
import MongoDb from "./icons/mongodb.astro";
import Supabase from "./icons/supabase.astro";
import React from "./icons/react.astro";
import NextJs from "./icons/nextjs.astro";
import Java from "./icons/java.astro";
import Prisma from "./icons/prisma.astro";
import Html from "./icons/html.astro";
import GitHub from "./icons/github.astro";
import AstroIcon from "./icons/a_stro.astro";

const allSkills = [
    { name: "TypeScript", Icon: TypeScript, color: "#3178C6" },
    { name: "JavaScript", Icon: JavaScript, color: "#F7DF1E" },
    { name: "PHP", Icon: Php, color: "#777BB4" },
    { name: "Next.js", Icon: NextJs, color: "#FFFFFF" },
    { name: "Astro", Icon: AstroIcon, color: "#FF5D01" },
    { name: "Laravel", Icon: Laravel, color: "#FF2D20" },
    { name: "React", Icon: React, color: "#61DAFB" },
    { name: "Tailwind", Icon: Tailwind, color: "#06B6D4" },
    { name: "Java", Icon: Java, color: "#007396" },
    { name: "MySQL", Icon: MySql, color: "#4479A1" },
    { name: "MongoDB", Icon: MongoDb, color: "#47A248" },
    { name: "Supabase", Icon: Supabase, color: "#3ECF8E" },
    { name: "GitHub", Icon: GitHub, color: "#FFFFFF" },
    { name: "Prisma", Icon: Prisma, color: "#2D3748" },
    { name: "Git", Icon: Git, color: "#F05032" },
];
---

<section id="skills" class="py-16 lg:py-24 px-6 max-w-6xl mx-auto relative overflow-hidden bg-[#1a1a1a]">
    <div class="relative z-10">
        <!-- Título de la sección -->
        <div class="mb-12 reveal">
            <h2 class="text-5xl lg:text-7xl font-bold text-white font-serif mb-8">
                Tecnologías
            </h2>
            <div class="w-16 h-[2px] bg-[#FFD700] opacity-50"></div>
        </div>

        <!-- Grid Orgánico y Elegante -->
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4 lg:gap-6 justify-items-center">
            {allSkills.map((skill, index) => (
                <div 
                    class="group relative reveal reveal-scale"
                    style={`transition-delay: ${index * 50}ms;`}
                >
                    <!-- Glass Card -->
                    <div class="relative w-[140px] h-[140px] lg:w-[180px] lg:h-[180px] bg-white/5 border border-white/10 rounded-4xl lg:rounded-[3rem] p-6 lg:p-8 flex flex-col items-center justify-between transition-all duration-700 ease-[cubic-bezier(0.23,1,0.32,1)] overflow-hidden group-hover:scale-105 group-hover:bg-white/10 group-hover:border-[#FFD700]/30 group-hover:shadow-[0_20px_60px_-15px_rgba(0,0,0,0.5)]">
                        
                        <!-- Shine effect on hover -->
                        <div class="absolute inset-0 bg-linear-to-br from-white/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>

                        <!-- Icon Container with Glow -->
                        <div class="relative z-10 w-12 h-12 lg:w-16 lg:h-16 flex items-center justify-center transition-all duration-700 group-hover:-translate-y-2">
                            <!-- Background Bloom Glow -->
                            <div class="absolute inset-0 rounded-full blur-2xl opacity-0 group-hover:opacity-20 transition-opacity duration-700" style={`background-color: ${skill.color}`}></div>
                            
                            <skill.Icon class="w-full h-full object-contain relative z-20 grayscale opacity-60 group-hover:grayscale-0 group-hover:opacity-100 transition-all duration-700" />
                        </div>

                        <!-- Name Label (Sophisticated) -->
                        <div class="relative z-10 flex flex-col items-center">
                            <span class="text-white/50 text-[10px] lg:text-xs font-bold uppercase tracking-[0.25em] transition-all duration-700 group-hover:text-[#FFD700] group-hover:tracking-[0.4em]">
                                {skill.name}
                            </span>
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>

<style>
    /* Estilos base */
</style>
